# GuitarBro Dashboard Environment Variables
# ==========================================
# Copy this file to .env and fill in your values
# For Streamlit Cloud, add these in Settings > Secrets

# ======================
# FACEBOOK PAGE API
# ======================
# Your Facebook Page ID (numeric)
FACEBOOK_PAGE_ID=your_page_id_here

# Page Access Token (never-expiring recommended)
# Get via Graph API Explorer > Generate Token > Select Page
FACEBOOK_PAGE_ACCESS_TOKEN=your_page_access_token_here

# App credentials (from developers.facebook.com > Your App > Settings > Basic)
FACEBOOK_APP_ID=your_app_id_here
FACEBOOK_APP_SECRET=your_app_secret_here

# ======================
# FACEBOOK ADS API
# ======================
# Ad Account ID (format: act_XXXXXXXXX)
# Find in Ads Manager URL or Business Settings
FACEBOOK_AD_ACCOUNT_ID=act_your_ad_account_id

# User Access Token with ads_read permission
# Get via Graph API Explorer > Select User Token > Add ads_read permission
FACEBOOK_USER_ACCESS_TOKEN=your_user_access_token_here

# ======================
# CLAUDE AI (ANTHROPIC)
# ======================
# API Key from console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here

# ======================
# DATABASE (OPTIONAL)
# ======================
# Defaults to data/fb_comments.db if not set
FB_COMMENTS_DB_PATH=data/fb_comments.db
